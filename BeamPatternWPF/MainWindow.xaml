<Window x:Class="BeamPatternWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BeamPatternWPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.Resources>
        <local:Model x:Key="model" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Параметры антенной решётки:" />
            <StackPanel Orientation="Horizontal">
                <TextBlock>КНД:</TextBlock>
                <TextBlock Text="{Binding Source={StaticResource model}, Path=Antenna.D}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Шаг между излучателями:" />
                <TextBox Width="50" Text="{Binding Source={StaticResource model}, Path=dx, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <ScrollBar Maximum="1"
                       Minimum="0.01"
                       Orientation="Horizontal"
                       SmallChange="0.01"
                       Value="{Binding Source={StaticResource model},
                                       Path=dx,
                                       UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
